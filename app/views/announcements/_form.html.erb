<%= form_for [@project, @announcement], :html => {:class => 'smart-form', :id => 'announcement_form'} do |f| %>

    <% if @announcement.errors.any? %>
        <div id="error_explanation" class='alert alert-error'>
          <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
          <h4>Ooops, <%= pluralize(@announcement.errors.count, "error") %> prohibited this todo from being saved:</h4>

          <ul>
            <% @announcement.errors.full_announcements.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>

    <% end %>

    <fieldset>

      <div class='row'>
        <section class="col col-6">
          <label class="label">Subject</label>
          <label class="input">
            <input class='input-lg' type="text" name="announcement[subject]" placeholder="Short subject for the announcement..." id='announcement_subject' value='<%= @announcement.subject %>'>
          </label>
        </section>

        <section class="col col-6">
          <label class="label">Expires On</label>
          <label class="input"> <i class="icon-append fa fa-calendar"></i>
            <input type="text" name="announcement[expires_at]" id="announcement_expires_at" placeholder="What date does this expire..." value='<%= @announcement.expires_at.strftime("%m/%d/%Y") unless @announcement.expires_at.nil? %>'>
          </label>
        </section>
      </div>

      <section>
        <label class="label">Body</label>
        <label class="textarea"><textarea rows="4" name="announcement[body]" id="announcement_body"><%= @announcement.body %></textarea> </label>
      </section>

    </fieldset>

    <footer>
      <button type="submit" class="btn btn-success pull-left">
        Save
      </button>
    </footer>

<% end %>

