<div id="content">

  <!-- row -->
  <div class="row">

    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
      <h1 class="page-title txt-color-blueDark">

        <!-- PAGE HEADER -->
        <i class="fa-fw fa fa-bullhorn"></i>
        Edit Announcement

      </h1>
    </div>
    <!-- end col -->

  </div>
  <!-- end row -->


  <!-- widget grid -->
  <well>

    <!-- row -->

    <div class="row" style='background-color: #fff;'>

      <div class="widget-body">

        <%= render 'form' %>

      </div>

    </div>

    <!-- end row -->

  </well>
  <!-- end widget grid -->

</div>

<%= render :partial => '/projects/scripts' %>

<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();

        $('#announcement_subject').focus();

        $('#announcement_expires_at').datepicker({
            dateFormat : 'mm/dd/yy',
            prevText : '<i class="fa fa-chevron-left"></i>',
            nextText : '<i class="fa fa-chevron-right"></i>'
        });

        var $announcementForm = $("#announcement_form").validate({

            // Rules for form validation
            rules: {
                'announcement[subject]': {
                    required: true,
                    minlength: 3
                },
                'announcement[expires_at]': {
                    required: true
                }
            },

            // Announcements for form validation
            announcements: {
                'announcement[subject]': {
                    required: 'Please enter a short name for your announcement'
                },
                'announcement[expires_at]': {
                    required: 'Please enter a date for this announcement expiration'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });

    })

</script>

