<div id="content">

  <!-- row -->
  <div class="row">

    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
      <h1 class="page-title txt-color-blueDark">

        <!-- PAGE HEADER -->
        <i class="fa-fw fa fa-bug"></i>
        Issue #<%= @issue.id %>

      </h1>
    </div>
    <!-- end col -->

  </div>
  <!-- end row -->


  <!-- widget grid -->
  <well>

    <!-- row -->

    <div class="row">

      <div class="widget-body">

        <h4 class='txt-color-grayDark'><%= @issue.subject %></h4>
        <span class='text-md'><%= @issue.description %></span>

        <div id="chat-body" class="chat-body custom-scroll">
          <h3>Comments</h3>
          <ul>

            <% @issue.comments.order('created_at').each do |comment| %>
            <li class="message">
              <img src="/SmartAdmin/img/avatars/male.png" class="online" alt="">

              <div class="message-text">
                <time>
                  <%= time_ago_in_words(comment.created_at) %> ago,
                  <%= comment.created_at.strftime("%m/%d/%Y   %I:%M %p") %>
                </time>
                <a href="javascript:void(0);" class="username"><%= comment.member.user.name %></a>
                <%= comment.body.html_safe %>
              </div>
            </li>
            <% end %>
          </ul>

        </div>

        <%= form_for [@project, @issue, @comment], :html => {:class => 'smart-form', :id => 'comment_form'} do |f| %>
            <fieldset>

              <section>
                <label class="label">Add a Comment</label>
                <label class="textarea"><textarea rows="4" name="comment[body]" id="comment_body" placeholder="<%= current_user.name %>, add a comment..."></textarea> </label>
              </section>

            </fieldset>

            <footer>
              <button type="submit" class="btn btn-success">
                Save
              </button>
            </footer>

        <% end %>

      </div>

    </div>

    <!-- end row -->

  </well>
  <!-- end widget grid -->

</div>

<%= render :partial => '/projects/scripts' %>

<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();

        $('#issue_subject').focus();

        var $commentForm = $("#comment_form").validate({

            // Rules for form validation
            rules: {
                'comment[body]': {
                    required: true
                }
            },

            // Messages for form validation
            messages: {
                'comment[body]': {
                    required: 'Please enter a comment.'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });

    })

</script>


