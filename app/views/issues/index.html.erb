<!-- row -->
<div class="row">

  <!-- col -->
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark">
      <!-- PAGE HEADER -->
      <i class="fa-fw fa fa-bug"></i>
      Issues
    </h1>
  </div>
  <!-- end col -->

  <div class="col-xs-12 col-sm-3 col-md-3 col-lg-5 pull-right">
    <!-- Button trigger modal -->
    <%= link_to 'Create a new issue', new_project_issue_path(@project), :class=>'btn btn-success btn-lg pull-right header-btn hidden-mobile' %>
  </div>

</div>
<!-- end row -->

<div class="col-sm-12">

  <div class="well">

    <table class="table table-striped table-forum">
      <thead>
      <tr>
        <th colspan="3">Issues</th>
        <th class="hidden-xs hidden-sm" style="width: 200px;">Last Activity</th>
        <th></th>
      </tr>
      </thead>
      <tbody>

      <% @project.issues.order('is_resolved nulls first').each do |issue| %>
          <!-- TR -->
          <tr <%= "class='closed'".html_safe unless !issue.is_resolved? %>>
            <td colspan="3">
              <h4><a href='/projects/<%= @project.id %>/issues/<%= issue.id %>'>
                <%= issue.description.html_safe %>
              </a>
                <small><i>Created on <%= issue.created_at.strftime("%m/%d/%Y") %>.
                  <% if issue.is_resolved? %>
                      Closed on <%= issue.updated_at.strftime("%m/%d/%Y") %>.
                  <% end %>
                  </i>
                </small>
              </h4>
            </td>
            <td class="hidden-xs hidden-sm"><small><i>by <%= get_issue_last_updated_by(issue.id) %></i></small>
            </td>
            <td>
              <% if !issue.is_resolved? %>
                <a href='/projects/<%= @project.id %>/issues/mark_resolved/<%= issue.id %>' class='btn btn-lg btn-success'>Close</a>
              <% else %>
                <a href='/projects/<%= @project.id %>/issues/mark_unresolved/<%= issue.id %>' class='btn btn-lg btn-danger'>Re-open</a>
              <% end %>
              <a href='/projects/<%= @project.id %>/issues/<%= issue.id %>/edit' class='btn btn-lg btn-default'>Edit</a>
            </td>
          </tr>
          <!-- end TR -->
      <% end %>

      </tbody>
    </table>


  </div>
</div>

