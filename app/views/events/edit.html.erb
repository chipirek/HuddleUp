<div id="content">

  <!-- row -->
  <div class="row">

    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
      <h1 class="page-title txt-color-blueDark">

        <!-- PAGE HEADER -->
        <i class="fa-fw fa fa-calendar"></i>
        Edit Event

      </h1>
    </div>
    <!-- end col -->

  </div>
  <!-- end row -->


  <!-- widget grid -->
  <well>

    <!-- row -->

    <div class="row" style='background-color: #fff;'>

      <div class="widget-body">

        <%= render 'form' %>

      </div>

    </div>

    <!-- end row -->

  </well>
  <!-- end widget grid -->


  <p> </p>
  <a href="/projects/<%= @project.id %>/events/<%= @event.id %>"
     class="btn btn-danger"
     data-confirm="Are you sure you want to delete <%= @event.title.truncate(50) %>?"
     data-method="delete"
     title="Delete">
    Delete this event
  </a>

</div>

<%= render :partial => '/projects/scripts' %>
<script src="/SmartAdmin/js/plugin/clockpicker/clockpicker.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();

        $('#event_start').datepicker({
            dateFormat : 'mm/dd/yy',
            prevText : '<i class="fa fa-chevron-left"></i>',
            nextText : '<i class="fa fa-chevron-right"></i>'
        });

        $('#event_end').datepicker({
            dateFormat : 'mm/dd/yy',
            prevText : '<i class="fa fa-chevron-left"></i>',
            nextText : '<i class="fa fa-chevron-right"></i>'
        });

        $('#event_start_time').clockpicker({
            placement: 'top',
            donetext: 'Done'
        });

        $('#event_end_time').clockpicker({
            placement: 'top',
            donetext: 'Done'
        });

        <% if @event.start_time.nil? %>
        $('#event_start_time').val('');
        $('#event_end_time').val('');
        <% end %>

        var allDay = <%= @event.all_day? %>;
        if (allDay)
        {
            $('#event_all_day').prop('checked', 'checked');
        }
        else
        {
            $('#event_all_day').removeProp('checked');
        }

        $('#event_title').focus();

        var $eventForm = $("#event_form").validate({

            // Rules for form validation
            rules: {
                'event[title]': {
                    required: true,
                    minlength: 3
                },
                'event[start]': {
                    required: true
                }
            },

            // Messages for form validation
            messages: {
                'event[title]': {
                    required: 'Please enter a short name for your event'
                },
                'event[start]': {
                    required: 'Please enter at least a starting date for your event'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });

    })

</script>


