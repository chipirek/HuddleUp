<%= form_for [@project, @invitation], :html => {:class => 'form-horizontal well'} do |f| %>
    <% if @invitation.errors.any? %>
        <div id="error_explanation" class='alert alert-error'>
          <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
          <h4>Ooops, <%= pluralize(@invitation.errors.count, "error") %> prohibited this invitation from being saved:</h4>

          <ul>
            <% @invitation.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>

    <% end %>

    <div class="control-group" id='name_controlGroup'>
      <label class="control-label" for="name">Name</label>

      <div class="controls">
        <input type="text" id="name" name='name' placeholder="Joe Dirt" value=''>
      </div>
    </div>

    <div class="control-group" id='email_controlGroup'>
      <label class="control-label" for="email">Email</label>

      <div class="controls">
        <input type="text" id="email" name='email' placeholder="joe@company.com" value=''>
      </div>
    </div>

    <div class="form-actions">
      <button type='submit' class='btn btn-success'><i class="icon-envelope"></i> Send</button>
      <a href='javascript:window.history.back();' class='btn btn-info'><i class="icon-backward"></i> Cancel</a>
    </div>

    <script type="text/javascript">
    </script>

<% end %>
