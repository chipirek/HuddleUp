<div id="content">

  <!-- row -->
  <div class="row">

    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
      <h1 class="page-title txt-color-blueDark">

        <!-- PAGE HEADER -->
        <i class="fa-fw fa fa-envelope"></i>
        Invite someone else to this HuddleUp

      </h1>
    </div>
    <!-- end col -->

  </div>
  <!-- end row -->


  <!-- widget grid -->
  <well>

    <!-- row -->

    <div class="row" style='background-color: #fff;'>

      <div class="widget-body">

        <%= render 'form' %>

      </div>

    </div>

    <!-- end row -->

  </well>
  <!-- end widget grid -->

</div>

<%= render :partial => '/projects/scripts' %>

<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();

        $('#name').focus();

        var $invitationform = $("#invitation_form").validate({

            // Rules for form validation
            rules: {
                'name': {
                    required: true,
                    minlength: 3
                },
                email : {
                    required : true,
                    email : true
                }
            },

            // Messages for form validation
            messages: {
                'name': {
                    required: 'Please fill in the name of the person you want to invite'
                },
                email : {
                    required : 'Please enter the email address',
                    email : 'Please enter a VALID email address'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });

    })

</script>

