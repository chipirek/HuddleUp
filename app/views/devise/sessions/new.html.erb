
  <!-- MAIN CONTENT -->
  <div id="content" class="container">

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 hidden-xs hidden-sm">
        <h1 class="txt-color-red login-header-big" style='font-size: 5em;'>HuddleUp</h1>
        <div class="hero">

          <div class="pull-left login-desc-box-l">
            <h4 class="paragraph-header">Start huddling with your team.</h4>

            <p>&nbsp;</p>
            <h5 class="about-heading">Forget paper and spreadsheets.</h5>
            <p>
              HuddleUp has cloud-based schedules, todo lists, alerts, and group messages - all in one place.
            </p>
            <p>&nbsp;</p>
            <h5 class="about-heading">Get together!</h5>
            <p>
              HuddleUp is an intuitive, secure, web-based collaboration tool. HuddleUp to run your projects more efficiently, stay in sync with family, and manage your time!
            </p>
            <p>&nbsp;</p>
            <h5 class="about-heading">HuddleUp is easy to use and easy on your wallet.</h5>
            <p>
              From 1 to 1,000 people on your team. Unlimited projects. Pay as go. Use what you need.
            </p>

          </div>

          <img src="/SmartAdmin/img/demo/team_huddle_1.jpg" class="pull-right display-image" alt="" style="width:260px">

        </div>


      </div>
      <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">

        <div class="well no-padding">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id=>'login-form', :class=>'smart-form client-form'}) do |f| %>
            <header>
              Sign In
            </header>

              <% if flash[:alert] %>
                  <div class="alert alert-danger fade in" style='margin-left: 10px; margin-right: 10px; margin-top: 10px;'>
                    <button class="close" data-dismiss="alert">
                      Ã—
                    </button>
                    <i class="fa-fw fa fa-times"></i>
                    <strong>Error!</strong> <%= flash[:alert] %>
                  </div>
              <% end %>

              <%= devise_error_messages! %>

              <fieldset>

              <section>
                <label class="label">E-mail</label>
                <label class="input"> <i class="icon-append fa fa-user"></i>
                  <input type="email" name='user[email]' id='user_email' class='input-lg' autofocus="true">
                  </label>
              </section>

              <section>
                <label class="label">Password</label>
                <label class="input"> <i class="icon-append fa fa-lock"></i>
                  <input type="password" name='user[password]' id='user_password' class='input-lg' autocomplete="false">
                  </label>
                <div class="note">
                  <%= link_to 'Forgot password?', new_user_password_path %>
                </div>
              </section>

              <% if devise_mapping.rememberable? -%>

                  <section>
                    <label class="checkbox">
                      <%= f.check_box :remember_me, :html=>{'checked'=>'checked'} %>
                      <i></i>Stay signed in</label>
                  </section>

              <% end -%>

            </fieldset>
            <footer>
              <button type="submit" class="btn btn-primary">
                Sign in
              </button>
            </footer>
          <% end %>

        </div>

      </div>
    </div>
  </div>

