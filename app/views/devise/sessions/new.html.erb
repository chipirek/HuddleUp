
<div class="container-fluid" id="main-container">
  <div id="main-content">
    <div class="row-fluid">
      <div class="span12">

        <div class="login-container">

          <div class="row-fluid">
            <div class="center">
              <h1><i class="icon-leaf green"></i> <span class="red">Huddle</span><span class="white">Up</span></h1>
              <h4 class="blue">&copy; Stone Hands Software</h4>
            </div>
          </div>

          <div class="space-6"></div>

          <div class="row-fluid">

            <div class="position-relative">


              <div id="login-box" class="visible widget-box no-border">

                <div class="widget-body">
                  <div class="widget-main">
                    <h4 class="header lighter bigger"><i class="icon-coffee green"></i> Please Enter Your Information
                    </h4>

                    <div class="space-6"></div>

                    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                        <label>
						<span class="block input-icon input-icon-right">
							<input type="text" class="span12" placeholder="Your email" name='user[email]' id='user_email'/>
							<i class="icon-user"></i>
						</span>
                        </label>
                        <label>
						<span class="block input-icon input-icon-right">
							<input type="password" class="span12" placeholder="Password" name='user[password]' id='user_password'/>
							<i class="icon-lock"></i>
						</span>
                        </label>

                        <div class="space"></div>

                        <div class="row-fluid">
                          <label class="span8">

                            <% if devise_mapping.rememberable? -%>
                                <%= f.check_box :remember_me %><span class="lbl"> Remember Me</span>
                            <% end -%>

                          </label>
                          <button type='submit' class="span4 btn btn-small btn-primary"><i class="icon-key"></i> Login
                          </button>
                        </div>

                    <% end %>

                  </div>
                  <!--/widget-main-->


                  <div class="toolbar clearfix">
                  </div>
                  <!--/widget-body-->

                </div>
                <!--/login-box-->


              </div>
              <!--/position-relative-->

            </div>


          </div>


        </div>
        <!--/span-->
      </div>
      <!--/row-->
    </div>
  </div>
  <!--/.fluid-container-->


  <!-- basic scripts -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script type="text/javascript">
      window.jQuery || document.write("<script src='assets/js/jquery-1.9.1.min.js'>\x3C/script>");
  </script>


  <!-- page specific plugin scripts -->


  <!-- inline scripts related to this page -->

  <script type="text/javascript">

      function show_box(id) {
          $('.widget-box.visible').removeClass('visible');
          $('#' + id).addClass('visible');
          $('body').addClass('login-layout');
      }

  </script>

</div>

