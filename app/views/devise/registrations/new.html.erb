<div id="page-content" class="clearfix">


  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-header widget-header-blue widget-header-flat wi1dget-header-large">
          <h4 class="lighter">Sign Up for HuddleUp!</h4>
        </div>

        <div class="widget-body">
          <div class="widget-main">

            <div class="row-fluid">
              <div id="fuelux-wizard" class="row-fluid hidden">
                <ul class="wizard-steps">
                  <li data-target="#step1" class="active"><span class="step">1</span><span class="title">Register</span></li>
                  <li data-target="#step2"><span class="step">2</span><span class="title">Setup Your First Project</span></li>
                  <li data-target="#step3"><span class="step">3</span><span class="title">Setup Payment Information</span></li>
                  <li data-target="#step4"><span class="step">4</span> <span class="title">Get Started!</span></li>
                </ul>
              </div>

              <hr/>

              <div class="step-content row-fluid position-relative">

                <div class="step-pane active" id="step1">

                  <h3 class="lighter block green">Set yourself up as an admin</h3>

                  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class => 'form-horizontal'}) do |f| %>
                      <%= devise_error_messages! %>

                      <input type='hidden' id='project_name' name='project_name' />

                      <div class="control-group">
                        <label class="control-label" for="email">Name</label>

                        <div class="controls">
                          <div class="span12">
                            <%= f.text_field :name, :autofocus => true, :class => 'span4' %>
                          </div>
                        </div>
                      </div>

                      <div class="control-group">
                        <label class="control-label" for="email">Email Address</label>

                        <div class="controls">
                          <div class="span12">
                            <%= f.email_field :email, :class => 'span6' %>
                          </div>
                        </div>
                      </div>

                      <div class="control-group">
                        <label class="control-label" for="email">Password</label>

                        <div class="controls">
                          <div class="span12">
                            <%= f.password_field :password %>
                          </div>
                        </div>
                      </div>

                      <div class="control-group">
                        <label class="control-label" for="email">Confirm Password</label>

                        <div class="controls">
                          <div class="span12">
                            <%= f.password_field :password_confirmation %>
                          </div>
                        </div>
                      </div>

                  <% end %>


                </div>

                <div class="step-pane" id="step2">

                  <h3 class="lighter block green">Describe your first project</h3>

                  <form class="form-horizontal" id="validation-form" method="get">

                    <div class="control-group">
                      <label class="control-label" for="email">Project Name</label>

                      <div class="controls">
                        <div class="span12">
                          <input type="text" name="project_name_buffer" id="project_name_buffer" class="span6" autofocus="autofocus" />
                        </div>
                      </div>
                    </div>

                  </form>
                </div>

                <div class="step-pane" id="step3">
                  <div class="center">
                    <h3 class="blue lighter">One day we'll charge money for this!</h3>
                  </div>
                </div>

                <div class="step-pane" id="step4">
                  <div class="center">
                    <h3 class="green">Ready?</h3>
                    Click <b>finish</b> to process your registration.
                  </div>
                </div>
              </div>

              <hr/>

              <div class="row-fluid wizard-actions">
                <button class="btn btn-prev"><i class="icon-arrow-left"></i> Prev</button>
                <button class="btn btn-success btn-next" data-last="Finish ">Next
                  <i class="icon-arrow-right icon-on-right"></i></button>
              </div>
            </div>

          </div>
          <!--/widget-main-->
        </div>
        <!--/widget-body-->
      </div>
    </div>
  </div>

</div>
<!--/row-->

<!-- PAGE CONTENT ENDS HERE -->


</div>
<!--/row-->

</div>
<!--/#page-content-->


</div>
<!-- #main-content -->


</div>
