<script type="text/javascript" src="/assets/js/fuelux.wizard.js"></script>
<script type="text/javascript" src="/assets/js/chosen.jquery.min.js"></script>
<script type="text/javascript">

    $(function () {

        $('.dialogs,.comments').slimScroll({
            height: '300px'
        });

        $('.date-picker').datepicker();

        $(".chzn-select").chosen();

        var oldie = $.browser.msie && $.browser.version < 9;

        var $tooltip = $("<div class='tooltip top in' style='display:none;'><div class='tooltip-inner'></div></div>").appendTo('body');
        $('[data-rel="tooltip"]').tooltip();

        $("#project_name_buffer").change( function() {
            $('#project_name').val($("#project_name_buffer").val());
        });

        $('#fuelux-wizard').ace_wizard([]).on('finished', function() {
            //alert($('#project_name').val());
            $('#new_user').submit();
        });
    });

</script>






