<%= form_for(@project, :html => {:class => 'smart-form', :id => 'project_form'}) do |f| %>
    <% if @project.errors.any? %>
        <div id="error_explanation" class='alert alert-error'>
          <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
          <h4>Ooops, <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

          <ul>
            <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>

    <% end %>


    <fieldset>
        <div class='row'>
      <section class="col col-6">
        <label class="label">Project Name</label>
        <label class="input">
          <input type="text" class='input-lg' name="project[name]" placeholder="Give your project a short title..." id='project_name' value='<%= @project.name %>'>
          </label>
        </section>

        <section class="col col-6">
            <label class="label">Status</label>
            <label class="select">
            <%= select('project', 'status_code', [['On track', 1], ['Troubled', 2], ['Late', 3]], {}) %>
            </label>

      </section>
        </div>

      <section>
        <label class="label">Description</label>
        <label class="textarea"><textarea rows="4" name="project[description]" id="project_description"><%= @project.description %></textarea> </label>
      </section>

    </fieldset>

    <footer>
      <button type="submit" class="btn btn-success">
        Save
      </button>
    </footer>

<% end %>

