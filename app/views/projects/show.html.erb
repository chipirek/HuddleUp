  <h1><i class="icon-list-alt"></i> <%= @project.name %> </h1>
  <span><%= @project.description %></span>
</div>
<!--/page-header-->


<div class="row-fluid">


<!-- PAGE CONTENT BEGINS HERE -->

<div class="space-6"></div>
<div class="row-fluid">

  <div class="span12">
    <div class="widget-box transparent">
      <div class="widget-body">
        <div class="widget-main padding-5">
          <div class="tab-content padding-8">

            <!-- BEGIN -->

            <% if flash[:notice] %>
                <div class='alert alert-block alert-success'>
                  <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
                  <strong><i class="icon-ok"></i> <%= flash[:notice] %></strong>
                </div>
            <% end %>

            <div class='row-fluid'>

              <div class="span6" id='left-column'>

                <!-- widget -->
                <div class="widget-box transparent">

                  <div class="widget-header">
                    <h4 class="lighter smaller"> MILESTONES</h4>

                    <div class="widget-toolbar no-border">
                    </div>
                  </div>

                  <div class="widget-body">
                    <div class="widget-main padding-5">
                      <div class="tab-content padding-8">
                        <div id="milestones-gadget" class="tab-pane active">

                          <table id="table_report" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                              <th>Milestone</th>
                              <th class="hidden-phone"><i class="icon-time hidden-phone"></i> Date</th>
                              <th class="hidden-480">Progress</th>
                              <th></th>
                            </tr>
                            </thead>

                            <tbody>

                            <% @project.milestones.each do |milestone| %>

                                <tr>

                                  <td>
                                    <a href="/projects/<%= @project.id %>/milestones/<%= milestone.id %>"><%= milestone.subject %></a>
                                  </td>
                                  <td class='hidden-phone'><%= milestone.event_date.strftime('%m/%d/%Y') %></td>

                                  <td>
                                    <div class="progress" data-percent="<%= milestone.percent_complete %>%">
                                      <div class="bar" style="width:<%= milestone.percent_complete %>%;"></div>
                                    </div>
                                  </td>

                                  <td>

                                    <a href="/projects/<%= @project.id %>/milestones/<%= milestone.id %>?target_view=dashboard"
                                       class="btn btn-mini btn-danger"
                                       data-confirm="Are you sure you want to delete <%= milestone.subject %>?"
                                       data-method="delete"
                                       data-placement="right"
                                       data-rel="tooltip"
                                       rel="nofollow"
                                       title="Delete">
                                      <span><i class='icon-trash'></i></span>
                                    </a>
                                    &nbsp;
                                    <button class="btn btn-mini btn-info icon-edit"
                                            onclick="window.location.href='/projects/<%= @project.id %>/milestones/<%= milestone.id %>/edit?target_view=dashboard'"
                                            data-placement="left"
                                            data-rel="tooltip"
                                            title="Edit">
                                    </button>
                                  </td>

                                </tr>

                            <% end %>

                            </tbody>
                          </table>

                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- end widget -->

                <!-- widget -->
                <div class="widget-box transparent">

                  <div class="widget-header">
                    <h4 class="lighter smaller"> TODOS</h4>

                    <div class="widget-toolbar no-border">
                    </div>
                  </div>

                  <div class="widget-body">
                    <div class="widget-main padding-5">
                      <div class="tab-content padding-8">

                          <div id="tasks-tab" class="tab-pane active" style="margin-bottom: 50px;">
                            <div class="clearfix">

                              <ul id="tasks" class="item-list">

                                <% @project.todos.each do |todo| %>

                                    <li class="<%= get_item_color(todo) %> clearfix task" data-pk='<%= todo.id %>' data-completed="<%= todo.is_complete %>" id="task_<%= todo.id %>">
                                      <label class="inline"><input id="chk_<%= todo.id %>" type="checkbox" data-completed="<%= todo.is_complete %>" /><span class="lbl"> <%= todo.subject %></span></label>

                                      <div class="inline pull-right position-relative">

                                        <a href="/projects/<%= @project.id %>/todos/<%= todo.id %>?target_view=dashboard"
                                           class="btn btn-mini btn-danger"
                                           data-confirm="Are you sure you want to delete <%= todo.subject %>?"
                                           data-method="delete"
                                           data-placement="right"
                                           data-rel="tooltip"
                                           rel="nofollow"
                                           title="Delete">
                                          <span><i class='icon-trash'></i></span>
                                        </a>
                                        &nbsp;
                                        <button class="btn btn-mini btn-info icon-edit"
                                                onclick="window.location.href='/projects/<%= @project.id %>/todos/<%= todo.id %>/edit?target_view=dashboard'"
                                                data-placement="left"
                                                data-rel="tooltip"
                                                title="Edit">
                                        </button>

                                      </div>
                                    </li>

                                <% end %>

                              </ul>

                            </div>
                          </div>



                        </div>
                      </div>
                    </div>
                </div>
                <!-- end widget -->

              </div>

              <div class="span6" id='right-column'>

                <!-- widget -->
                <div class="widget-box transparent">

                  <div class="widget-header">
                    <h4 class="lighter smaller"> STATUS</h4>

                    <div class="widget-toolbar no-border">
                    </div>
                  </div>

                  <div class="widget-body">
                    <div class="widget-main padding-5">
                      <div class="tab-content padding-8">
                        <div id="status-gadget" class="tab-pane active">
                          <span class='label <%= get_project_status_color(@project) %>' style='font-size:2em; padding: 25px 25px 25px 25px;'><%= get_project_status_text(@project) %></span>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
                <!-- end widget -->

                <!-- widget -->
                <div class="widget-box transparent">

                  <div class="widget-header">
                    <h4 class="lighter smaller"> ALERTS</h4>

                    <div class="widget-toolbar no-border">
                    </div>
                  </div>

                  <div class="widget-body">
                    <div class="widget-main padding-5">
                      <div class="tab-content padding-8">
                        tbd
                      </div>
                    </div>
                  </div>
                </div>
                <!-- end widget -->

                <!-- widget -->
                <div class="widget-box transparent">

                  <div class="widget-header">
                    <h4 class="lighter smaller"> MESSAGES</h4>

                    <div class="widget-toolbar no-border">
                    </div>
                  </div>

                  <div class="widget-body">
                    <div class="widget-main padding-5">
                      <div class="tab-content padding-8">
                        tbd
                      </div>
                    </div>
                  </div>
                </div>
                <!-- end widget -->

                <!-- widget -->
                <div class="widget-box transparent">

                  <div class="widget-header">
                    <h4 class="lighter smaller"> COMMENTS</h4>

                    <div class="widget-toolbar no-border">
                    </div>
                  </div>

                  <div class="widget-body">
                    <div class="widget-main padding-5">
                      <div class="tab-content padding-8">
                        tbd
                      </div>
                    </div>
                  </div>
                </div>
                <!-- end widget -->

                <!-- widget -->
                <div class="widget-box transparent">

                  <div class="widget-header">
                    <h4 class="lighter smaller"> ACTIVITY</h4>

                    <div class="widget-toolbar no-border">
                    </div>
                  </div>

                  <div class="widget-body">
                    <div class="widget-main padding-5">
                      <div class="tab-content padding-8">
                        <div id="progress-gadget" class="tab-pane active">
                          <ul class='unstyled space2'>
                          <% @project.audits.each do |a| %>
                            <li><i class="icon-circle green"></i><%= User.find(a.user_id).name %> <%= a.action %>d this <%= a.auditable_type.downcase %> <%= time_ago_in_words(a.created_at) %> ago</li>
                          <% end %>
                          <% @project.associated_audits.each do |a| %>
                              <li><i class="icon-circle green"></i><%= User.find(a.user_id).name %> <%= a.action %>d <%= a.auditable_type.downcase %> <%= time_ago_in_words(a.created_at) %> ago</li>
                          <% end %>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- end widget -->

              </div>

            </div>

            <!-- END -->

          </div>

          <p>
            <a class='btn btn-success' href="/projects/<%= @project.id %>/edit">Edit this project</a>
          </p>

        </div>
        <!--/widget-main-->
      </div>
      <!--/widget-body-->


    </div>
    <!--/widget-box-->
  </div>
  <!--/span-->

</div>
