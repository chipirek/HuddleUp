<!-- row -->
<div class="row">

  <!-- col -->
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark">
      <!-- PAGE HEADER -->
      <i class="fa-fw fa fa-reorder"></i>
      Timeline - <%= @audits.count %> entries
    </h1>
  </div>
  <!-- end col -->

</div>
<!-- end row -->

<div class="row">

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

    <div class="well well-sm">

      <!-- Timeline Content -->

      <div class="smart-timeline">
        <ul class="smart-timeline-list">

          <% @audits.each do |a| %>
              <li>
                <div class="smart-timeline-icon">
                  <img src="/SmartAdmin/img/avatars/sunny.png" width="32" height="32" alt="user">
                </div>

                <div class="smart-timeline-time">
                  <small><%= a.created_at.strftime("%m/%d/%Y %I:%M %P") %></small>
                </div>

                <div class="smart-timeline-content">
                  <p>
                    <%= a.full_message.html_safe %>
                  </p>

                  <p class='font-xs'>
                    <i><%= time_ago_in_words(a.created_at) %> ago</i>
                  </p>
                </div>
              </li>

          <% end %>

        </ul>

      </div>

      <!-- END Timeline Content -->

    </div>
  </div>
</div>