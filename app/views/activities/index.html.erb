            <div class="timeline-container timeline-style2">
											<span class="timeline-label">
												<b>Timeline</b>
											</span>

              <% @audits.each do |a| %>
                  <div class="timeline-items">
                    <div class="timeline-item clearfix">
                      <div class="timeline-info">
                        <span class="timeline-date"><%= a.created_at.strftime("%m/%d/%Y %M:%H") %></span>

                        <i class="timeline-indicator btn btn-info no-hover"></i>
                      </div>

                      <div class="widget-box transparent">
                        <div class="widget-body">
                          <div class="widget-main no-padding"><i><%= time_ago_in_words(a.created_at) %> ago</i>
                            - <%= a.full_message %></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--/.timeline-items-->
              <% end %>
            </div>

          </div>
        </div>
        <!--/row-->
        <!--PAGE CONTENT ENDS-->
      </div>
      <!--/.span-->
    </div>
    <!--/.row-fluid-->
  </div>
